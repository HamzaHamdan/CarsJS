<div class="container my-5">

    {{> success}}
    {{> errors}}

    <form action="/cars/detailedview" method="POST" enctype="multipart/form-data" class="rounded p-4 text-white"
        style="background-color: rgb(65, 80, 80, 0.8)">
        <div class="row m-3">
            <div class="col-6">
                <div class="form-group">
                    <label for="addCarMakeDDL">Make</label>
                    <select class="form-control" id="addCarMakeDDL" name="addCarMakeDDL">
                        <option value="" disabled selected hidden>Choose car make</option>
                        {{#each carMakeArray}}
                        <option value="{{this.carMakeId}}">{{ this.carMakeName }}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label for="addCarModelDDL">Model</label>
                    <select class="form-control" id="addCarModelDDL" name="addCarModelDDL">
                        <option value="" disabled selected hidden>Choose car model</option>
                        {{!-- {{#each carModelsArray}}
                        <option value="{{ this.modelName }}">{{ this.modelName }}</option>
                        {{/each}} --}}
                    </select>
                </div>
            </div>

        </div>

        <div class="row m-3">
            <div class="col-6">
                <div class="form-group">
                    <label for="carYear">Year</label>
                    <input type="text" class="form-control" id="carYear" name="carYear" placeholder="Enter car year">
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label for="carColor">Color</label>
                    <input type="text" class="form-control" id="carColor" name="carColor" placeholder="Enter car color">
                </div>
            </div>

        </div>

        <div class="row m-3">
            <div class="col-6">
                <div class="form-group">
                    <label for="carVinNum">VIN Number</label>
                    <input type="text" class="form-control" id="carVinNum" name="carVinNum"
                        placeholder="Enter car VIN number">
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label for="carMilage">Milage</label>
                    <input type="text" class="form-control" id="carMilage" name="carMilage"
                        placeholder="Enter car milage">
                </div>
            </div>

        </div>

        <div class="row m-3">
            <div class="col-6">
                <div class="form-group">
                    <label for="carPrice">Price</label>
                    <input type="text" class="form-control" id="carPrice" name="carPrice" placeholder="Enter car price">
                </div>
            </div>
        </div>

        <div class="row m-3">
            <div class="col">
                <div class="form-group">
                    <div class="input-group">

                        <div class="input-group-prepend" style="background-color: rgb(235, 235, 224, 0.5);">
                            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                        </div>
                        <div class="custom-file" style="background-color: rgb(235, 235, 224, 0.5);">
                            <input type="file" class="custom-file-input" id="carImagesUploader" name="carImagesUploader"
                                aria-describedby="inputGroupFileAddon01" multiple>
                            <label class="custom-file-label" for="carImagesUploader">Upload car pictures</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row m-3">
            <div class="col-4"></div>
            <div class="col-4 text-center">

                <div class="form-group">
                    <button type="submit" class="btn btn-light btn-lg form-control">Submit</button>
                </div>
            </div>
            <div class="col-4"></div>

        </div>

    </form>
</div>