<div class="container-fluid mt-5">

    <div class="mt-5 p-5">


        <div class="row">

            <div class="col-7">

                <div id="carouselControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">

                        {{#each images}}

                        {{#if @first}}
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="{{ this }}" alt="Image1">
                        </div>
                        {{/if}}
                        {{#unless @first}}
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{ this }}" alt="Image1">
                        </div>
                        {{/unless}}
                        {{/each}}

                    </div>
                    <a class="carousel-control-prev bg-dark" href="#carouselControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next bg-dark" href="#carouselControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <div class="col-5" style="background-color: rgba(232, 232, 232, 0.5)">
                <div id="details-section">

                    <div class="row mt-4">
                        <div class="col-2"></div>
                        <div class="col-4">Make: {{newCar.carMake}}</div>
                        <div class="col-4">Model: {{newCar.carModel}}</div>
                        <div class="col-2"></div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-2"></div>
                        <div class="col-4">Year: {{newCar.carYear}}</div>
                        <div class="col-4">Color: {{newCar.carColor}}</div>
                        <div class="col-2"></div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-2"></div>
                        <div class="col-4">Milage: {{newCar.carMilage}}</div>
                        <div class="col-4">VIN Number: {{newCar.carVinNum}}</div>
                        <div class="col-2"></div>
                    </div>

                    <div class="row mt-5">
                        <div class="col-2"></div>
                        <div class="col-8">
                            <button class="btn form-control text-white" style="background-color: #393939;">Book your
                                test
                                drive!</button>
                        </div>
                        <div class="col-2"></div>
                    </div>
                </div>


            </div>

        </div>



    </div>





</div>