<div class="container pt-5">
    <form action="/cars/search" method="POST">
        <div class="form-group mt-5">
            <div class="py-5 px-3 rounded" style="background-color: rgb(65, 80, 80, 0.8)">

                <div class="display-3 text-center" style="color: rgb(0, 160, 160, 1); font-family: 'Muli', sans-serif;">
                    Find Your Vehicle</div>

                <hr style="border: 1px solid white;">
                {{> errors}}
                {{> success}}
                <div class="row pt-3">

                    <div class="col-md-3 m-auto">
                        <select class="form-control" style="height: 60px;" id="carsMakeDDL" name="carsMakeDDL">
                            <option value="" disabled selected hidden>Choose a Make</option>
                            {{#each carMakeArray}}
                            <option value="{{this.carMakeId}}">{{ this.carMake }}
                            </option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="col-md-3 m-auto">
                        <select class="form-control" style="height: 60px;" id="carsModelDDL" name="carsModelDDL">
                            <option class="modelListItems" value="" disabled selected hidden>Choose a Model</option>
                        </select>
                    </div>

                    <div class="col-md-3 m-auto">
                        <select class="form-control" style="height: 60px;" id="carsYearDDL" name="carsYearDDL">
                            <option value="" disabled selected hidden>Choose a Year</option>
                        </select>
                    </div>

                    <div class="col-md-3 m-auto"><button type="submit"
                            style="height: 60px; background-color:rgb(0, 160, 160, 1); font-weight: bold; font-family: 'Muli', sans-serif;"
                            class="btn form-control text-white lead">Show Results!</button>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>