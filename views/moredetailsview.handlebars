<div class="container my-5">

    <div class="mt-5 p-5">

        <div class="row">

            <div class="col-12">

                <div id="carouselControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">

                        {{#each pathToImages}}

                        {{#if @first}}
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="{{ this }}" alt="Image1">
                        </div>
                        {{/if}}
                        {{#unless @first}}
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{ this }}" alt="Image1">
                        </div>
                        {{/unless}}
                        {{/each}}

                    </div>
                    <a class="carousel-control-prev bg-dark" href="#carouselControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next bg-dark" href="#carouselControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12" style="background-color: rgba(232, 232, 232, 0.5)">
                <div id="details-section">

                    <div class="row mt-4">
                        <div class="col-2"></div>
                        <div class="col-4">Make: {{carObject.make}}</div>
                        <div class="col-4">Model: {{carObject.model}}</div>
                        <div class="col-2"></div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-2"></div>
                        <div class="col-4">Year: {{carObject.carYear}}</div>
                        <div class="col-4">Color: {{carObject.carColor}}</div>
                        <div class="col-2"></div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-2"></div>
                        <div class="col-4">Milage: {{carObject.carMilage}}</div>
                        <div class="col-4">VIN Number: {{carObject.carVinNum}}
                        </div>
                        <div class="col-2"></div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-2"></div>
                        <div class="col-8">
                            <a href="/cars/bookings/{{ carObject.id }}/{{ carObject.carVinNum }}"
                                class="btn btn-lg my-4 text-white form-control" style="background-color: #393939;">Book
                                your
                                test drive!</a>
                        </div>
                        <div class="col-2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>



</div>





</div>