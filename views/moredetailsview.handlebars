<div class="container-fluid my-5">
    <div class="row px-5 mx-1" style="background-color: rgb(65, 80, 80, 0.8)">
        <div class="col-8 py-3 text-white lead">

            <div id="carouselControls" class="carousel slide" data-ride="carousel">

                <ol class="carousel-indicators">
                    {{#each pathToImages as |item i|}}

                    {{#if @first}}
                    <li data-target="#carouselControls" data-slide-to="{{i}}" class="active"></li>
                    {{/if}}
                    {{#unless @first}}
                    <li data-target="#carouselControls" data-slide-to="{{i}}"></li>
                    {{/unless}}
                    {{/each}}
                </ol>

                <div class="carousel-inner">

                    {{#each pathToImages}}

                    {{#if @first}}
                    <div class="carousel-item active">
                        <img class="d-block w-100 detailedViewCarouselImage" src="{{ this }}" alt="Image1">
                    </div>
                    {{/if}}
                    {{#unless @first}}
                    <div class="carousel-item">
                        <img class="d-block w-100 detailedViewCarouselImage" src="{{ this }}" alt="Image1">
                    </div>
                    {{/unless}}
                    {{/each}}

                </div>
                <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3 text-white lead">
            <div id="details-section">

                <div class="row mt-4">
                    <div class="col">Make: {{carObject.make}}</div>
                </div>

                <div class="row mt-4">
                    <div class="col">Model: {{carObject.model}}</div>
                </div>

                <div class="row mt-4">
                    <div class="col">Year: {{carObject.carYear}}</div>
                </div>

                <div class="row mt-4">
                    <div class="col">Color: {{carObject.carColor}}</div>
                </div>

                <div class="row mt-4">
                    <div class="col">VIN Number: {{carObject.carVinNum}}</div>
                </div>

                <div class="row mt-4">
                    <div class="col">Milage: {{carObject.carMilage}}</div>
                </div>

                <div class="row mt-2">
                    <div class="col">
                        <a href="/cars/bookings/{{ carObject.id }}/{{ carObject.carVinNum }}"
                            class="btn btn-lg my-4 form-control bg-light">Book
                            Your Test Drive</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
</div>