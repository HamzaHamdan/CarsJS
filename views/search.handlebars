<div class="container my-5">
    <div class="mt-5 p-5">
        {{#each carsArray}}
        <div class="card mb-3 text-white p-2" style="background-color: rgb(65, 80, 80, 0.8)">
            <div class="row no-gutters">
                <div class="col-md-4 m-auto">
                    <div id="{{this.id}}" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">

                            {{#each images}}

                            {{#if @first}}
                            <div class="carousel-item active">
                                <img class="d-block w-100 searchPageCarouselImage" src="{{ this }}" alt="Image1">
                            </div>
                            {{/if}}
                            {{#unless @first}}
                            <div class="carousel-item">
                                <img class="d-block w-100 searchPageCarouselImage" src="{{ this }}" alt="Image1">
                            </div>
                            {{/unless}}
                            {{/each}}

                        </div>
                        <a class="carousel-control-prev bg-dark" href="#{{this.id}}" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next bg-dark" href="#{{this.id}}" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{this.id}}</h5>
                        <hr style="border: 1px solid white;">
                        <div class="row mt-2">
                            <div class="col-6">Make: {{this.make}}</div>
                            <div class="col-6">Model: {{this.model}}</div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">Year: {{this.carYear}}</div>
                            <div class="col-6">Milage: {{this.carMilage}}</div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">Color: {{this.carColor}}</div>
                            <div class="col-6">Price: {{this.carPrice}}</div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-3 text-center"></div>
                            <div class="col-6">
                                <a href="/cars/viewMoreDetails/{{ this.id }}"
                                    class="btn btn-lg btn-light form-control">More
                                    Details!</a>
                            </div>
                            <div class="col-3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>