<div class="container mt-5">

    <div class="mt-5 p-5 bg-dark">


        <div class="row">

            <div class="col-6">

                <div id="carouselControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">

                        {{#each images}}

                        {{#if @first}}
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="{{ this }}" alt="Image1">
                        </div>
                        {{/if}}
                        {{#unless @first}}
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{ this }}" alt="Image1">
                        </div>
                        {{/unless}}
                        {{/each}}

                    </div>
                    <a class="carousel-control-prev bg-dark" href="#carouselControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next bg-dark" href="#carouselControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <div class="col-6">
                <div id="details-section">

                    <div class="row mt-2">
                        <div class="col-6 text-white">Make: {{newCar.carMake}}</div>
                        <div class="col-6">Model: {{newCar.carModel}}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6">Year: {{newCar.carMake}}</div>
                        <div class="col-6">Milage: {{newCar.carMake}}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6">Color: {{newCar.carMake}}</div>
                        <div class="col-6">Specs: {{newCar.carMake}}</div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-4"></div>
                        <div class="col-4">
                            <button class="btn btn-primary form-control" id= "book-test-drive">Book your test drive!</button>
                        </div>
                        <div class="col-4"></div>
                    </div>
                </div>


            </div>

        </div>



    </div>





</div>